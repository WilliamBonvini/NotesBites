<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginVertical="3dp"
    app:cardCornerRadius="10dp"


    >

    <LinearLayout
        android:id="@+id/guest_homepage_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/groovepaper_small"
        android:baselineAligned="false"
        android:orientation="horizontal"


        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp">

            <TextView
                android:id="@+id/guest_homepage_subject_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:ellipsize="end"

                android:includeFontPadding="true"
                android:maxLines="2"
                android:text="Artificial Neural Networks and Deep Learning"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/nb_black" />

            <TextView
                android:id="@+id/guest_homepage_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/guest_homepage_subject_name"
                android:text="Description"
                android:textColor="@color/nb_black" />

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>







