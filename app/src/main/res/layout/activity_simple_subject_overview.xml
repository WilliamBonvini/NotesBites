<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/textured_paper"
    android:weightSum="4"
    >

    <include layout="@layout/toolbar_main"
        android:id="@+id/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="20dp"
        android:background="@drawable/textured_paper"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/textured_paper"
            app:cardCornerRadius="30dp"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/simple_overview_text"
                android:textSize="25sp"
                android:textColor="#000000"
                android:scrollbars = "vertical"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/groovepaper_repeat"

                android:text="esempio di testo"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            app:cardCornerRadius="30dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/simple_overview_module_names"
                android:textColor="@color/nb_black"
                android:scrollbars = "vertical"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:textSize="25sp"
                android:background="@drawable/groovepaper_repeat"


                android:text="inserisci moduli"/>


        />
        </androidx.cardview.widget.CardView>
    </LinearLayout>



</LinearLayout>