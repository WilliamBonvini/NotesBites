<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="8"
    android:background="@drawable/background_gradient">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_trasparent"
        />



    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_logo"
        android:text="@string/select_subjects_message_2"
        android:textAlignment="center"
        android:textSize="12pt"
        />

    <ImageButton
        android:id="@+id/button_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/select_subjects_confirm_button_text"
        android:onClick="onClickConfirmSelectedSubjects"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_next_shape"
        android:src="@drawable/arrow_forward_black"
        />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".SelectSubjectsActivity"
        android:layout_below="@+id/text_description"
        android:layout_above="@+id/button_confirm"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/fragment_select_subjects_single_subject" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>
















