<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GuestHomepageActivity"
    >

   <include layout="@layout/toolbar_main"
       android:id="@+id/toolbar"/>


   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:text="@string/search_subjects"
      android:id="@+id/btn_search"
      android:onClick="startSelectSubjectsActivity"/>


   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/guest_homepage_recycler_view"
       android:layout_width="match_parent"
       android:layout_height="300dp"
       tools:listitem="@layout/fragment_guesthomepage_single_subject"
       />


   <Button
       android:id="@+id/signIn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:text="@string/signin"
       android:onClick="startSignInActivity"
       />


</LinearLayout>